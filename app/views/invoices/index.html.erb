<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Invoices</h3>
      </div>
      <div class="panel-body table-responsive">
        <table class="table table-hover table-bordered table-striped ">
          <thead>
            <tr>
              <th>Company</th>
              <th>Contragent</th>
              <th>Amount</th>
              <th>Date</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @invoices.each do |invoice| %>
              <tr>
                <td><%= invoice.company %></td>
                <td><%= invoice.contragent %></td>
                <td><%= invoice.amount %> <%= invoice.currency %></td>
                <td><%= invoice.date %></td>
                <td><%= link_to 'Show', invoice, class:"btn btn-success" %></td>
                <td><%= link_to 'Edit', edit_invoice_path(invoice), class: "btn btn-warning" %></td>
                <td><%= link_to 'Delete', invoice, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"%></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
      <div class="panel-footer">
        <%= link_to 'New Invoice', new_invoice_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>


